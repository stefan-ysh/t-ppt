{
  "name": "ppt-showcase",
  "version": "1.0.0",
  "description": "我的PPT展示网站",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "build:enhanced": "./scripts/build-enhanced.sh",
    "build:shell": "bash scripts/build-all.sh",
    "dev": "echo '🎨 PPT展示站开发模式' && echo '' && echo '📝 创建新PPT: ./scripts/create-ppt.sh [name] [title]' && echo '🖥️  查看首页: npm run dev:home' && echo '📊 开发PPT: cd ppt/[ppt-name] && npm run dev' && echo '🔧 查看帮助: ./scripts/create-ppt.sh --help'",
    "dev:home": "python3 -m http.server 8080 || python -m http.server 8080",
    "dev:ppt": "echo '请指定PPT名称: cd ppt/[ppt-name] && npm run dev'",
    "preview": "python3 -m http.server 8080 --directory dist || python -m http.server 8080 --directory dist",
    "create-ppt": "./scripts/create-ppt.sh",
    "list-ppts": "echo '📋 已有的PPT:' && ls -la ppt/ | grep '^d' | awk '{print \"  - \" $9}' | grep -v '\\.$'",
    "clean": "rm -rf dist/ ppt/*/node_modules/ ppt/*/dist/",
    "install:all": "echo '📦 安装所有依赖...' && npm install && ./scripts/build-all.sh > /dev/null 2>&1 && echo '✅ 安装完成！使用 npm run list-ppts 查看所有PPT'",
    "lint": "eslint . --ext .js,.ts,.vue --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js,.ts,.vue --ignore-path .gitignore --fix",
    "format": "prettier --write \"**/*.{js,ts,vue,md,json}\"",
    "type-check": "tsc --noEmit",
    "analyze": "npm run build && npx webpack-bundle-analyzer dist/stats.json",
    "dev-tools": "./scripts/dev-tools.sh",
    "performance": "./scripts/performance-analysis.sh",
    "optimize:images": "node tools/optimize-images-js.js analyze",
    "webp:guide": "node tools/webp-guide.js",
    "webp:analyze": "node tools/webp-guide.js analyze",
    "optimize:images:stats": "node optimize-images-js.js stats",
    "setup": "npm install && npm run install:all",
    "check": "npm run lint && npm run type-check"
  },
  "dependencies": {
    "@slidev/cli": "^52.2.4",
    "@slidev/theme-default": "^0.25.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.545.0",
    "slidev-addon-hls-player": "^0.1.6",
    "slidev-addon-qrcode": "^1.0.2",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@iconify-json/mdi": "^1.2.3",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "playwright-chromium": "^1.40.0",
    "prettier": "^3.6.2",
    "prettier-plugin-slidev": "^1.0.5",
    "typescript": "^5.0.0",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "keywords": [
    "slidev",
    "presentation",
    "vue",
    "markdown"
  ],
  "author": "Your Name",
  "license": "MIT"
}
